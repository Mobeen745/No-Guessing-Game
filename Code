<body>
    <div id="game-container">
        <h1>Guess the Number!</h1>
        <p id="game-message">üîç Guess the number between 1 and 100</p>
        <input type="number" id="guess-input" min="1" max="100" placeholder="Enter your guess">
        <button id="submit-guess">Submit</button>
    </div>

    <script>
        // Select elements
        const gameMessage = document.getElementById('game-message');
        const guessInput = document.getElementById('guess-input');
        const submitGuessButton = document.getElementById('submit-guess');

        // Set the game number
        let gameNumber = Math.floor(Math.random() * 100) + 1;

        // Add event listener to the button
        submitGuessButton.addEventListener('click', function() {
            let userGuess = parseInt(guessInput.value, 10);

            if (isNaN(userGuess)) {
                gameMessage.textContent = "‚ùå Please enter a valid number!";
                gameMessage.classList.add('message');
            } else if (userGuess < gameNumber) {
                gameMessage.textContent = "‚¨ÜÔ∏è Too low! Try again.";
                gameMessage.classList.add('message');
            } else if (userGuess > gameNumber) {
                gameMessage.textContent = "‚¨áÔ∏è Too high! Try again.";
                gameMessage.classList.add('message');
            } else {
                gameMessage.textContent = "üéâ Correct! You guessed the number!";
                gameMessage.classList.add('message');
            }

            // Clear the input field
            guessInput.value = '';
        });
    </script>
</body>
